generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum ComplaintStatus {
  pending
  completed
  rejected
  deleted
}

enum FileType {
  pdf
  image
}

model ComplaintAttachments {
  id Int @id @default(autoincrement())
  file_type FileType
  file_path String
  file_name String

  complaint_id Int
  complaint Complaint @relation(fields: [complaint_id], references: [id])
}


model Complaint{
  id Int @id @default(autoincrement())
  first_name String
  last_name String
  address String
  postal_code String
  city String
  country String
  phone_number String
  email String
  complaint_text String
  created_at String
  status ComplaintStatus @default(pending)

  attachments ComplaintAttachments[]
  ticket_number String
}

enum ManagerRole {
  admin
  superuser
}

model Manager {
  id Int @id @default(autoincrement())
  username String @unique
  password String

  role ManagerRole
  created_at String
  updated_at String?
  deleted_at String?
}